<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - ATENTE-SE PARA O DETALHE "DayNight" -->
    <style name="Theme.DesafiosComunsAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- +=======================================================+ -->
        <!-- | Video setup toolbar: https://youtu.be/RbOCBzHIwSw      | -->
        <!-- +=======================================================+ -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- FORCE DARK WEB VIEW: SE JA TIVER USANDO VERSÃƒO 29 PODE HABILITAR ESSA PROPERTY -->
        <!-- <item name="android:forceDarkAllowed">true</item> -->
    </style>

    <style name="Theme.DesafiosComunsAndroid.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- +=======================================================+ -->
    <!-- | Video Splash Screen: https://youtu.be/cMXE8PN-qIc     | -->
    <!-- +=======================================================+ -->
    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.DesafiosComunsAndroid</item>
    </style>

    <!-- +===========================================================+ -->
    <!-- | Video Dialog From Context: https://youtu.be/W8La6tMRv14   | -->
    <!-- +===========================================================+ -->
    <style name="DcaDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/teal_200</item>
    </style>

    <!-- +===========================================================+ -->
    <!-- | Video Menu De Filtros: https://youtu.be/2RRr_opi6Fk       | -->
    <!-- +===========================================================+ -->
    <style name="ScadaChipChoice.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
    </style>

    <!-- +===========================================================+ -->
    <!-- | Video Estilos Personalizados: xxxxxxxxxxxxxxxxxxxxxx      | -->
    <!-- +===========================================================+ -->
    <style name="CustomFontStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gesture_points</item>
    </style>

    <style name="CustomFontStyleTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gesture_stroke</item>
    </style>


</resources>