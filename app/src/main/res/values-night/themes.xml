<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafiosComunsAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- +=======================================================+ -->
        <!-- | Video setup toolbar: https://youtu.be/RbOCBzHIwSw      | -->
        <!-- +=======================================================+ -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- +=======================================================+ -->
    <!-- | Video Splash Screen: https://youtu.be/cMXE8PN-qIc     | -->
    <!-- +=======================================================+ -->
    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.DesafiosComunsAndroid</item>
    </style>

    <!-- +===========================================================+ -->
    <!-- | Video Dialog From Context: https://youtu.be/2RRr_opi6Fk   | -->
    <!-- +===========================================================+ -->
    <style name="DcaDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/teal_200</item>
    </style>

    <!-- +===========================================================+ -->
    <!-- | Video Estilos Personalizados: https://youtu.be/6HPBpeBXlXs | -->
    <!-- +===========================================================+ -->
    <style name="CustomFontStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gesture_points</item>
    </style>

    <style name="CustomFontStyleTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gesture_stroke</item>
    </style>
</resources>